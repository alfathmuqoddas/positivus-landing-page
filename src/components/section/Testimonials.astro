---
import TestimonialCard from "../TestimonialCard.astro";
---

<section class="flex flex-col gap-16">
  <div class="flex flex-col md:flex-row items-center gap-10">
    <h2
      class="text-[40px] bg-brandGreen font-medium inline-block rounded-lg px-2"
    >
      Testimonials
    </h2>
    <p class="text-center text-lg md:text-left md:w-[580px]">
      Hear from Our Satisfied Clients: Read Our Testimonials to Learn More about
      Our Digital Marketing Services
    </p>
  </div>
  <div
    class="flex flex-nowrap overflow-auto gap-8 bg-brandDark pt-16 px-16 pb-32 rounded-[45px]"
  >
    <TestimonialCard />
    <TestimonialCard />
    <TestimonialCard />
  </div>
</section>
