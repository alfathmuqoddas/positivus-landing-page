    >
      <Icon name="logo-light" width={180} height={29} />
      <div
        class="flex flex-col md:flex-row gap-4 text-lg text-white text-center md:text-left"
      >
        <a href="#" class="underline">About Us</a>
        <a href="#" class="underline">Services</a>
        <a href="#" class="underline">Use Cases</a>
        <a href="#" class="underline">Pricing</a>
        <a href="#" class="underline">Blog</a>
      </div>
      <div class="hidden md:block">
        <Social />
      </div>
    </div>
    <div
      class="flex flex-col md:flex-row justify-between items-center gap-16 md:gap-0 border-b border-b-white pb-[50px]"
    >
      <div class="flex flex-col gap-6 text-center md:text-left max-w-[332px]">
        <div>
          <h4 class="text-xl bg-brandGreen inline-block font-medium rounded-md">
            Contact Us
          </h4>
        </div>
        <p class="text-lg text-white">Email: info@positivus.com</p>
        <p class="text-lg text-white">Phone: 555-567-8901</p>
