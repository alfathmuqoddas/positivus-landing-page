<section class="flex flex-col gap-16">
  <div class="flex flex-col md:flex-row items-center gap-10">
    <h2
      class="text-[40px] bg-brandGreen font-medium inline-block rounded-lg px-2"
    >
      Contact Us
    </h2>
    <p class="text-center text-lg md:text-left md:w-[580px]">
      Connect with Us: Let's Discuss Your Digital Marketing Needs
    </p>
  </div>
  <div class="bg-brandGrey py-16 rounded-[45px]">
    <div class="md:flex block justify-between gap-0 md:gap-16 relative">
      <div class="px-8 md:px-24">
        <div class="flex flex-col gap-10 w-full md:w-[556px]">
          <div class="flex gap-8">
            <div class="flex items-center gap-3">
              <input
                type="radio"
                id="html"
                class="accent-brandGreen w-7 h-7"
                name="fav_language"
                value="HTML"
              />
              <label for="html" class="text-lg">Say Hi</label>
            </div>
            <div class="flex items-center gap-3">
              <input
                type="radio"
                id="css"
                class="accent-brandGreen w-7 h-7"
                name="fav_language"
                value="CSS"
              />
              <label for="css" class="text-lg">Get A Quote</label>
            </div>
          </div>
          <div class="flex flex-col gap-2">
            <label for="name" class="text-lg">Name</label>
            <input
              type="text"
              id="name"
              class="border-2 py-4 px-9 rounded-xl border-brandDark"
              name="name"
              placeholder="Name"
            />
          </div>
          <div class="flex flex-col gap-2">
            <label for="email" class="text-lg">Email*</label>
            <input
              type="email"
              id="email"
              class="border-2 py-4 px-9 rounded-xl border-brandDark"
              name="email"
              placeholder="Email"
            />
          </div>
          <div class="flex flex-col gap-2">
            <label for="message" class="text-lg">Message</label>
            <textarea
              id="message"
              rows="5"
              class="border-2 py-4 px-9 rounded-xl border-brandDark"
              name="message"
              placeholder="Message"></textarea>
          </div>
          <button class="bg-brandDark text-white py-5 px-8 rounded-2xl">
            Send Message
          </button>
        </div>
        <div class="absolute inset-y-0 -right-80 hidden md:block">
          <img src="/images/contact-us.png" />
        </div>
      </div>
    </div>
  </div>
</section>
